<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stamatiou.moviesRepositoryApp">

<!--
    This Android application simulates a password protected Movies Repository.
    Users can interact with the records using touch or menus/buttons.
    Records are stored in a SQLite Database.
    Password is stored as a Shared Preferences value and can be changed within the app.

    Author: Aggelos Stamatiou, May 2020
-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PasswordProtectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PasswordChangeActivity" />
        <activity android:name=".RepositoryActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".ActionActivity" />
    </application>

</manifest>